# =============================================================================
# InnoSynth.ai Backend Configuration
# Copy this file to .env and fill in your values
#
# SECURITY WARNING: Never commit .env files with real secrets to git!
# =============================================================================

# Environment: development, staging, production
# In production, the app will fail fast if required secrets are missing
ENVIRONMENT=development

# Application Settings
APP_NAME=InnoSynth.ai
DEBUG=False
API_PREFIX=/api

# CORS Origins - comma-separated list of allowed origins
# In production, NEVER include localhost
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database - Choose ONE option:
# Option 1: SQLite (local development, no setup required)
DATABASE_URL=sqlite+aiosqlite:///./innosynth.db
# Option 2: PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/innosynth

# Graph Database (Neo4j) - Optional, for knowledge graph features
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Vector Database (Pinecone) - Optional, for cloud vector storage
# Leave empty to use local numpy-based vector storage
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=innosynth-embeddings

# Cache (Redis) - Optional
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# AI APIs - At least one recommended for full functionality
# OpenAI (embeddings + optional LLM)
OPENAI_API_KEY=
# Anthropic Claude (synthesis + optional embeddings)
ANTHROPIC_API_KEY=

# Embedding Settings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Synthesis Settings
SYNTHESIS_MODEL=claude-3-5-sonnet-20241022
MAX_SOURCES=10

# Query Settings
QUERY_TIMEOUT_SECONDS=30
MAX_QUERY_LENGTH=500

# =============================================================================
# AUTHENTICATION (CRITICAL SECURITY SETTINGS)
# =============================================================================

# JWT Configuration - REQUIRED
# Generate a strong secret (min 32 chars): python -c 'import secrets; print(secrets.token_urlsafe(32))'
# In development, a random secret is auto-generated if not set
# In production, the app will FAIL TO START without this
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=7

# OAuth General
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Encryption key for OAuth tokens - REQUIRED in production
# Generate: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
ENCRYPTION_KEY=

# =============================================================================
# OAUTH PROVIDERS (All Optional)
# =============================================================================

# Google OAuth
# Get credentials: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft/Azure OAuth
# Get credentials: https://portal.azure.com/
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Slack OAuth
# Get credentials: https://api.slack.com/apps
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Salesforce OAuth
# Get credentials: https://developer.salesforce.com/
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_INSTANCE_URL=https://login.salesforce.com

# =============================================================================
# FILE STORAGE
# =============================================================================

# Upload directory (relative or absolute path)
UPLOAD_DIR=./uploads

# =============================================================================
# ERROR TRACKING (SENTRY)
# =============================================================================

# Sentry DSN - Optional, enables error tracking
# Get your DSN at: https://sentry.io/
SENTRY_DSN=
