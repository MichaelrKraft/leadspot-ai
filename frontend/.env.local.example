# =============================================================================
# InnoSynth.ai Frontend Configuration
# Copy this file to .env.local and fill in your values
#
# SECURITY WARNING: Never commit .env.local files with real secrets to git!
# =============================================================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Application Environment
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=0.1.0

# =============================================================================
# ERROR TRACKING (SENTRY)
# =============================================================================

# Sentry DSN - Optional, enables error tracking
# Get your DSN at: https://sentry.io/
# Create a Next.js project in Sentry to get your DSN
NEXT_PUBLIC_SENTRY_DSN=

# Sentry Organization and Project (for source map uploads)
# Only needed for production builds
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
